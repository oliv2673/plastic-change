---
import Cta from "../components/Cta.astro";
import Prisknap from "../components/Prisknap.astro";

const { overskrift, valg, hide, hide2, center, tal1, tal2, tal3} = Astro.props;
---


<section>
    <h2 class={center}>{overskrift}</h2>
    <p class={hide}>{valg}</p>          
      <div class="form_con">
        <div class={hide2} class="toolbar">
            <div class="iteration_indhold"><input type="radio" name="iterationer" id="maanedlig" required="required"><label class="small" for="mobile">Månedlig</label></div>
            <div class="iteration_indhold"><input type="radio" name="iterationer" id="engangs" required="required"><label class="small" for="kort">Én gang</label></div>
        </div>
        <div class={center} class="form_buttons">
            <button class="knap">{tal1}</button>
            <button class="knap">{tal2}</button>
            <button class="knap">{tal3}</button>            
        </div>
        
        <form class="form_con" action="">
            <label for="name"></label><input type="text" placeholder="Andet beløb" />
        <div class={hide} class="radio-toolbar">
            <h3 class="betal_overskrift">Betalingsform</h3>
            <div class="radio_indhold"><input type="radio" name="betaling" id="mobilepay" required="required"><label class="small" for="mobile">Mobilepay </label> <br></div>
            <div class="radio_indhold"><input type="radio" name="betaling" id="kort" required="required"><label class="small" for="kort">Betalingskort</label><br></div>
        </div>


        <div class={hide} class="input-con"><label for="name">Fornavn<span>*</span></label><input type="text" /></div>
        <div class={hide} class="input-con"><label for="lname">Efternavn<span>*</span></label><input type="text" /></div>
        <div class={hide} class="input-con"><label for="mail">Email<span>*</span></label><input type="text"/></div>
        <div class={hide} class="input-con"><label for="phone">Telefon</label><input type="text"/></div>
        <div class={hide} class="input-con"><label for="postalcode">Postnr.</label><input type="text"></div>
        <div class={hide} class="mellemrum"><input type="checkbox" name="fradrag" id="fradrag"><label id="skat" class="small" for="fradrag">Jeg ønsker fradrag fra SKAT</label></div>
        <div class={hide} class="mellemrum"><input type="checkbox" name="samtykke" id="samtykke" required="required"><label class="detmedsmaat" for="mobile">Jeg giver mit samtykke til, at Plastic Change må opbevare og behandle mine oplysninger til brug i forbindelse med min støtte. Læs mere om dette samtykke i vores <span><a href="">privatlivspolitik.</a></span> </label></div>
            
        </form>
        <div class={hide2} class="knap_con2">
            <Cta title="Støt" link="/stoet2" type="wide2" /></div>

        <div class={hide} class="knap_con">
        <Cta title="Støt" link="/tak" type="wide" /></div>
    </div>
</section>


<script>
    window.addEventListener("load", sidenVises);

function sidenVises() {
  console.log("sidenVises");
  // Tilføj click event til alle knapper med klassen knap
  document.querySelectorAll(".knap").forEach(function (btn) {
    btn.addEventListener("click", klick);
  });
}

function klick() {
  console.log("click");

  // fjern "clicked" class fra alle knapper
  document.querySelectorAll(".knap").forEach(function (btn) {
    btn.classList.remove("clicked");
  });

  // tilføj "clicked" class til knappen
  this.classList.add("clicked");
}
</script>


<style>
    

    section, .form_con, .knap_con, .mellemrum, .form_buttons {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }
    
    
    .mellemrum, .form_buttons {
        flex-direction: row;
        padding-top: 1rem;
    }

    .input-con, .radio-toolbar {
        padding-top: 1rem;
    }

    .radio-toolbar .small{
        padding-bottom: 1rem;
    }

    .radio-toolbar  {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }
   

    section {
        padding: 3rem;
        background-color: var(--white);
    }
    .knap_con {
        padding-top: 2rem;
        align-items: center;
    }
    input[type=text], select { 
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid var(--grey500);
        border-radius: 4px;
        box-sizing: border-box;}
    .form_con {
    max-width: 500px;
    }

    label, .betal_overskrift {
    font-family: "Rubik", sans-serif;
    font-size: 1.4375rem;
    font-weight: var(--medium);}
    
    span, a {
    color: var(--red500);}

    .small {
        font-family: "Rubik", sans-serif;
        font-size: 1.1rem;
        font-weight: 400;
        color: var(--grey500);
        padding-left: 0.5rem;

    }

    .detmedsmaat {
        font-family: "Rubik", sans-serif;
        font-size: 0.8rem;
        font-weight: 400;
        color: var(--grey400);

    }

    a {
        text-decoration: none;
    }
    a:hover {
        text-decoration: underline;
    }

    #skat {
        padding-left: 0rem;
    }

    .not_visible {
        display: none;
    }

    .toolbar {
        display: flex;
        justify-content: space-between;
        margin-inline: 50px;

    }
    .center {
        margin:auto;
        display: flex;
        gap: 40px;
    }
    h2 {
        padding-bottom: 1rem;
    }

    /**Pris knap */
    button {
  background-color:var(--white);
  color: var(--grey500);
  border: 1px solid var(--grey500);
  border-radius: 50%;  
  text-align: center;
  text-decoration: none;
  display: inline-block;
  width: 5rem;
  height: 5rem;
}

button:hover {
    color: var(--white);
    background-color: var(--red100);
    border: 1.5px solid var(--red100);
  }

  button.clicked{
    color: var(--white);
    background-color: var(--red500);
    border: 1.5px solid var(--red500);
  }
  .knap {
  font-family: "Rubik", sans-serif;
  font-size: 1rem;
  font-weight: 400;
  color: var(--grey500);
}

@media (max-width: 800px) {
    .toolbar, .center  {
        gap: 10px;
    }
    section {
        padding-inline: 5%;
        padding-block: 8%;
    }

}

</style>
