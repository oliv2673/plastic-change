---
const { overskrift, svg1, svg2, svg3, svg4, alt1, alt2, alt3, alt4, text1, text2, text3, text4 } = Astro.props;

---


<section>
    <div class="text">
        <h2>{overskrift}</h2>
    </div>
    <div class="svg_con">
        <div class="svg">
            <img src={svg1} alt={alt1}>
            <p>{text1}</p>
        </div>
        <div class="svg">
            <img src={svg2} alt={alt2}>
            <p>{text2}</p>
        </div>
        <div class="svg">
            <img src={svg3} alt={alt3}>
            <p>{text3}</p>
        </div>
        <div  class="svg">
            <img src={svg4} alt={alt4}>
            <p>{text4}</p>
        </div>
        </div>

</section>


<style>

section {
    background-color: var(--grey100);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.text, .svg, .svg_con {
    display: flex;
    justify-content: center;
    flex-direction: column;

}

p {
    width: 300px;
    text-align: center;
}

h2 {
    text-align: center;
}

/*** web ***/
@media (min-width: 800px) {
.svg_con {
    flex-direction: row;
}
}

</style>
