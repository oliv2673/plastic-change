---
const { text, procent, icon } = Astro.props;
---

<section class="con">
  <p class="highlight">{procent}</p>
  <p>{text}</p>
  <div class="ring">
    <div class="icon_ring">
      <img src={icon} alt="" />
    </div>
  </div>
</section>
<style>
  .highlight {
    font-family: "Rubik", sans-serif;
    font-size: 3.75rem;
    font-weight: 500;
  }

  p {
    text-align: center;
  }

  .ring {
    margin-top: 2rem;
    height: 270px;
    width: 270px;
    border-radius: 25rem;
    display: flex;
    align-items: center;
    justify-content: center;
    filter: drop-shadow(0px 4px 4px rgba(0, 0, 0, 0.25));

    background: conic-gradient(
      var(--red100) var(--percentage),
      var(--grey100) 0
    );
    border-radius: 50%;
    animation: timer 4s 1 ease-in-out forwards;
  }

  .icon_ring {
    height: 135px;
    width: 135px;
    background-color: var(--white);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    filter: drop-shadow(0px 4px 4px rgba(0, 0, 0, 0.25));
  }

  img {
    width: 9rem;
    flex-shrink: 0;
    padding-bottom: 10px;
  }

  .con {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  @property --percentage {
    initial-value: 0%;
    inherits: false;
    syntax: "<percentage>";
  }

  #ur_sprite {
    background: conic-gradient(white var(--percentage), red 0);
    border-radius: 50%;
    width: 80vmin;
    height: 80vmin;
    animation: timer 4s 1 linear;
  }

  @keyframes timer {
    to {
      --percentage: 100%;
    }
  }
</style>
