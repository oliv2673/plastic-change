---
import Cta from "./Cta.astro";
const { mode } = Astro.props;
---

<section class={mode}>
  <div class="con">
    <h2>Tilmeld dig nyhedsbrevet</h2>
    <p>
      FÃ¸lg med i vores arbejde mod plastikforurening, og bliv opdateret med de
      seneste nyheder
    </p>
  </div>
  <form>
    <input type="email" placeholder="Email" />
    <Cta title="Tilmeld" type="wide" />
  </form>
</section>
<style>
  section {
    display: flex;
    flex-direction: column;
    gap: 70px;
    z-index: 12;
    padding-block: var(--padding-sections);
  }

  

  .dark {
    background-color: var(--grey100);
    z-index: 12;
    position: relative;
  }

  .light {
    background-color: var(--white);
    z-index: 12;
    position: relative;
  }
  input {
    padding-inline: 16px;
    font-size: 1rem;
    min-width: 350px;
    height: 3.125rem;
    border: 1px solid var(--grey500);
    border-radius: 4px;

  }

  input[type=text], select { 
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid var(--grey500);
        box-sizing: border-box;}

  form {
    display: flex;
    gap: 20px;
    margin-inline: auto;
  }

  h2,
  p {
    text-align: center;
    padding-bottom: 20px;
    
  }

  .con {
    margin-inline:auto;
    max-width: 600px;
  }

  /***** Mobile ******/
  @media (max-width: 800px) {
    section {
      padding-inline: var(--mobile-padding-inline);

    }
      form {
      margin:auto;
    }
    input {
    min-width: 300px;}
  }
  @media (max-width: 470px) {
    form{
      flex-direction: column;
      align-items: center;
    }
    input {
    min-width: 50px;

  }
  section {
    gap: 20px;

  }


</style>
