---
import BaseLayout from "../layouts/BaseLayout.astro";
import Nav from "../components/Nav.astro";
import Citat from "../components/Citat.astro";
import Omtanke from "../components/Omtanke.astro";
import Nyhedsbrev from "../components/Nyhedsbrev.astro";
import SoMe from "../components/So_me.astro";
import Ikoner from "../components/Ikoner.astro";
import Info from "../components/Info.astro";
import Formular from "../components/Formular.astro";
---

<BaseLayout />
<Nav />
<section class="formular">
  <div class="forms">
    <Formular
      overskrift="Støt os her"
      valg="Vælg dit beløb i DKK"
      hide="not_visible"
      center="center"
      tal1="50"
      tal2="75"
      tal3="125"
    />
  </div>
  <div class="laesmere_con">
    <h3 class="laesmere">Læs mere om hvad din donation går til</h3>
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="40"
      height="40"
      viewBox="0 0 1024 1024"
    >
      <path
        fill="#fff"
        d="M831.872 340.864L512 652.672L192.128 340.864a30.592 30.592 0 0 0-42.752 0a29.12 29.12 0 0 0 0 41.6L489.664 714.24a32 32 0 0 0 44.672 0l340.288-331.712a29.12 29.12 0 0 0 0-41.728a30.592 30.592 0 0 0-42.752 0z"
      ></path>
    </svg>
  </div>
</section>
<Citat />
<Ikoner
  overskrift="Din støtte går blandt andet til at:"
  svg1="../assets/icons/havogmiljoe.svg"
  alt1="hav og miljøet"
  svg2="../assets/icons/fodaftryk.svg"
  alt2="klima aftryk"
  svg3="../assets/icons/jordklodespirre.svg"
  alt3="jordens resourcer"
  svg4="../assets/icons/kemikalier.svg"
  alt4="skadelige kemikalier"
  text1="Beskytte naturen og havet mod plastikforurening"
  text2="Mindske klimaaftryk"
  text3="Skåne Jordens ressourcer"
  text4="Beskytte folkesundheden mod skadelig kemi"
/>
<section class="omtanke">
  <Omtanke />
  <div class="info_con">
    <Info
      procent="70%"
      ringp="p70"
      text="Hav- og miljøindsatser"
      icon="../assets/icons/verden.svg"
    />
    <Info
      procent="22%"
      ringp="p22"
      text="Fundraising og indsamlinger"
      icon="../assets/icons/fundraiser.svg"
    />
    <Info
      procent="8%"
      ringp="p8"
      text="Projektstyring og administration"
      icon="../assets/icons/administration.svg"
    />
  </div>
</section>
<SoMe mode="light" />
<Nyhedsbrev mode="dark" />

<style>
  .omtanke {
    padding-block: var(--padding-sections);
  }
  .info_con {
    display: flex;
    justify-content: space-around;
  }

  main {
    max-width: 1200px;
    margin-inline: auto;
  }
  .formular {
    background-image: linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.3)),
      url("../assets/img/stoet1foto.webp");
    height: 100vh;
    width: 100%;
    max-width: 100%;
    background-size: cover;
    background-position: center 10%;
    align-items: center;
  }

  .forms {
    display: flex;
    justify-content: center;
    padding-top: 80px;
  }

  .laesmere {
    color: var(--white);
    font-size: 1.2rem;
    text-shadow: var(--shadows);
    text-align: center;
  }
  .laesmere_con {
    padding-top: 50px;
    display: flex;
    flex-direction: column;
    margin: auto;
    flex-wrap: wrap;
    align-items: center;
  }

  @media (max-width: 800px) {
    .info_con {
      gap: 100px;
      flex-direction: column;
      padding-inline: var(--padding-sections);
    }
  }
</style>
